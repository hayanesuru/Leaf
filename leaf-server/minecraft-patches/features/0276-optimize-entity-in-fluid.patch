         }
 
         for (int currX = minBlockX; currX <= maxBlockX; ++currX) {
             for (int currY = minBlockY; currY <= maxBlockY; ++currY) {
                 for (int currZ = minBlockZ; currZ <= maxBlockZ; ++currZ) {
